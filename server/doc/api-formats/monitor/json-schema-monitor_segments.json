{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "monitor_segments.schema.json",
  "title": "segments",
  "description": "list of segments connected/known, each with info on occupancy.",
  "type": "object",
  "properties": {
    "segments": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 0,
      "items": {
        "required": [
          "id",
          "occupied-by"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "occupied-by": {
            "$comment": "if a segment is not occupied, its occupied-by entry is an empty list. No separate bool for that to save bandwidth, but this might be reconsidered in the future.",
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "segments"
  ]
}